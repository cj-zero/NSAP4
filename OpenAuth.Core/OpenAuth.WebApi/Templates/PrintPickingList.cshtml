@using OpenAuth.App.Material.Response
<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
            font-family: "华文宋体";
        }

        table {
            border-collapse: collapse;
        }

        #bom {
            position: fixed;
            left: 0px;
            bottom: 0;
            _position: absolute;
            _top: expression(document.documentElement.clientHeight + document.documentElement.scrollTop - this.offsetHeight);
        }
    </style>
</head>

<body>
    <div>
        @{string SalesOrderId = "", ServiceOrderSapId = "";}
        <table style="font-size:11pt; clear:both;">
            @{int number = 0;}
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td style="width: 30px;" align="center" valign="top">@{++number;} @number </td>
                    <td style="width: 300px; " align="left" valign="top">&nbsp; @item.MaterialCode</td>
                    <td style="width: 600px;  " align="left">@item.MaterialDescription</td>
                    <td style="width: 100px; " align="right" valign="top"></td>
                    <td style="width: 70px; " align="right" valign="top">@item.Count &nbsp;</td>
                    <td style="width: 100px;   " align="left" valign="top">&nbsp; @item.Unit</td>
                    <td style="width: 50px; " align="right" valign="top">@item.Location@{SalesOrderId = @item.SalesOrder; ServiceOrderSapId = @item.ServiceOrderSapId;}</td>
                </tr>
    }
        </table>
    </div>
    <div style="width:600px; font-weight:900;font-size:15pt;">
        出库原因：SE - @SalesOrderId &nbsp;&nbsp;&nbsp;   ID - @ServiceOrderSapId
    </div>
</body>

</html>
