@using OpenAuth.App.Serve.Response

<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <style type="text/css">
        body {
            width: 825px;
            margin: 0 auto;
            margin-top: 10px;
            font-size: 15px;
            font-family: "华文宋体";
            color: #202020;
        }

        table {
            border-collapse: collapse;
        }

        #tablebor {
            margin: 0 auto;
            border-collapse: collapse;
        }

            #tablebor th {
                border-color: #808A87;
                border-style: solid;
                border-width: 1px;
            }

        #divtitle {
            margin: 0 auto;
        }

        hr {
            height: 0px;
            border-top: 1px solid #808A87;
            border-right: 0px;
            border-bottom: 0px;
            border-left: 0px;
        }

        #divcode {
            border-style: solid;
            border-width: 1px;
            border-color: #808A87;
            height: 50px;
            width: 825px;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div id="divtitle" style=" width: 825px; height:60px;">
        <div style="float:left;width: 200px; margin-top: 10px;">
            <img src="data:image/png;base64,@Model.Data.logo" style="width: 140px;height: 40px;">
        </div>
        <div style="float:left;width: 250px; ">
            <span style="font-size: 42px;">差旅报销单</span>
        </div>
        <div style="float:left;width: 250px; margin-top: -5px;">
            <span>
                <b>单号：</b><span style="font-size: 24px;">@Model.Data.ReimburseId</span>
            </span>
            <br>
            <span>
                <b>日期：</b>@Model.Data.Reimburse.UpdateTime.ToString("yyyy.MM.dd")
            </span>
            <br>
            <span>
                <b>报销：</b>@Model.Data.UserName
            </span>
        </div>
        <div style="float:left;width: 100px; margin-top: 5px;">
        </div>
    </div>
    <table style="margin-top: 10px;" id="divcode">
        <tr>
            <td style="width:50px; ">&nbsp;<b>客户代码:</b></td>
            <td style="width:50px; ">@Model.Data.TerminalCustomerId</td>
            <td style="width:50px;"><b>客户名称:</b></td>
            <td style="width:80px;">@Model.Data.TerminalCustomer</td>
            <td style="width:30px" align="right">&nbsp;&nbsp;&nbsp;<b>地址：</b></td>
            <td style="width:120px">@Model.Data.CompleteAddress</td>
        </tr>
        <tr>
            <td style="width: 50px;">&nbsp;<b>服务单号:</b></td>
            <td style="width: 50px;">@Model.Data.Reimburse.ServiceOrderSapId</td>
            <td style="width: 50px;"><b>出差事由:</b></td>
            <td style="width: 450px;" colspan="3">@Model.Data.FromTheme</td>
        </tr>
    </table>
    <table style="margin-top: 15px;  width:825px" id="tablebor">
        <tr>
            <th style="width: 40px;">序号</th>
            <th style="width: 100px;" align="left">&nbsp; 日期</th>
            <th style="width: 150px;" align="left">&nbsp; 费用名称</th>
            <th style="width: 410px;" align="left">&nbsp; 费用详情</th>
            <th style="width: 100px; " align="right">金额 &nbsp;</th>
        </tr>
        @{int number = 0;}
        @foreach (var item in Model.Data.Reimburse.ReimburseFares)
        {
            <tr>
                <td> @{++number;} @number</td>
                <td>&nbsp; @item.InvoiceTime?.ToString("yyyy.MM.dd")</td>
                <td>&nbsp; @item.TrafficType</td>
                <td>&nbsp; @item.From - @item.To </td>
                <td align="right">@item.Money &nbsp;</td>
            </tr>
        }
        @foreach (var item in Model.Data.Reimburse.ReimburseAccommodationSubsidies)
        {
            <tr>
                <td> @{++number;}@number</td>
                <td>&nbsp; @item.InvoiceTime?.ToString("yyyy.MM.dd")</td>
                <td>&nbsp; 住宿补贴</td>
                <td>&nbsp; @item.Days 天 </td>
                <td align="right">@item.Money &nbsp;</td>
            </tr>
        }
        @foreach (var item in Model.Data.Reimburse.ReimburseTravellingAllowances)
        {
            <tr>
                <td> @{++number;} @number</td>
                <td></td>
                <td>&nbsp; 出差补贴</td>
                <td>&nbsp; @item.Days 天 </td>
                <td align="right">@{var Money = item.Money * item.Days; }@Money &nbsp;</td>
            </tr>
        }
        @foreach (var item in Model.Data.Reimburse.ReimburseOtherCharges)
        {
            <tr>
                <td>  @{++number;} @number</td>
                <td>&nbsp; @item.InvoiceTime?.ToString("yyyy.MM.dd")</td>
                <td>&nbsp; @item.ExpenseCategory</td>
                <td></td>
                <td align="right">@item.Money &nbsp;</td>
            </tr>
        }

    </table>
    <div style="margin-top: 20px;">
        <div style="font-size:20px; font-weight: 800;" align="right">费用总计：@Model.Data.Reimburse.TotalMoney.ToString("N") &nbsp;</div>
        <hr>
    </div>
</body>

</html>
